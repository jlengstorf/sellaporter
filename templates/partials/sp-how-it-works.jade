-
  var blockName = 'sp-how-it-works';
  var blockModifiers = [];
-
+section(blockName, blockModifiers, false)
  +element(blockName, 'item')
    +element(blockName, 'heading', [], 'h2')= section.heading
    +element(blockName, 'lead').
      !{section.lead}

    +element(blockName, 'flex-wrapper')
      +element(blockName, 'video-container').
        !{section.video}
      +element(blockName, 'video-caption', [], 'p')= section.video_caption

    +element(blockName, 'steps', [], 'ul')
      each step in section.steps
        +element(blockName, 'step', ['one'], 'li')
          +element(blockName, 'icon-wrap')
            +element(blockName, 'icon', [], 'img')(
              src= step.icon.url
              alt= step.icon.alt
            )
          +element(blockName, 'subheading', [], 'h3')= step.step_heading
          +element(blockName, 'description', [], 'p')= step.step_description
